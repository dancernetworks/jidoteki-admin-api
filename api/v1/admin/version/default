[de version-number ()
  (in (list 'cat (pack *Admin_path "etc/version.txt")) (pack (till "^J") ]

[de version-get ()
  (if (version-number)
      (response-json (json~encode (list (cons "version" @))))
      (http-msg 404) ]

(de version-request ()
  (if (validate-token (get 'token 'http))
      (if *Post
          (http-msg 400)
          (version-get) )
      (http-msg 403) ) )

(version-request)
