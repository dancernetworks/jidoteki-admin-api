(de setup-update ()
  (if (get 'newtoken 'http)
      (if (update-token @)
          (http-msg 200)
          (http-msg 400) )
      (http-msg 400) ) )

[de setup-new ()
  (let Path (pack *Admin_path "etc/api.token")
    (if (num? (car (info Path)))
        (http-msg 403)
        (setup-update) ]

[de setup-request ()
  (when *Post
    (if (validate-token (get 'token 'http))
        (setup-update)
        (setup-new) ]

(setup-request)
