// #firstrun container
#jido-page-firstrun.container-fluid.jido-page-content.jido-page-content-firstrun(style='display:none')
  .row
    .col-lg-10.col-md-10.col-sm-10.offset-lg-1.offset-md-1
      h1.page-header First Run
  .row
    .col-lg-6.col-md-6.col-sm-12.offset-lg-3.offset-md-3
      .card.jido-panel(style='display:none;')
        .card-header
          h4 Status:
            span.badge.jido-data-firstrun-status ...waiting for setup token
          .progress(style='display:none; margin-top: 20px')
            .progress-bar.bg-striped.active(role='progressbar', aria-valuenow='33', aria-valuemin='0', aria-valuemax='100', style='width: 33%')
              | ...updating, please wait
  .row
    .col-lg-6.col-md-6.col-sm-12.offset-lg-3.offset-md-3
      .card.jido-panel.jido-panel-network
        .card-body
          | Set your new
          em  API Token
          |  below.
          br
          br
          .alert.alert-danger.token-alert(style='display:none;')
            | API Token mismatch. Please verify the API Token.
          .row
            form.token-form(role='form', autocomplete='off')
              fieldset
                .col-lg-8.col-md-8.col-sm-8.offset-md-2
                  .form-group.has-success
                    label.control-label.token-setuptoken-label(for='setuptoken-input')
                      | Setup Token
                    input#setuptoken-input.form-control(placeholder='Setup Token', name='setuptoken', type='text')
                  .form-group.has-success
                    label.control-label.token-token1-label(for='setuptoken1-input')
                      | API Token
                    input#setuptoken1-input.form-control(placeholder='API Token', name='setuptoken1', type='password')
                  .form-group.has-success
                    label.control-label.token-token2-label(for='setuptoken2-input')
                      | Confirm API Token
                    input#setuptoken2-input.form-control(placeholder='Confirm API Token', name='setuptoken2', type='password')
                  .form-group
                    br
                    input#jido-button-firstrun-upload.btn.btn-lg.btn-primary.btn-block(type='submit', value='Update', onclick='return event.preventDefault();')
// /#firstrun container
