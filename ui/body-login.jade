// #login container
#jido-page-login.container-fluid(style='display:none')
  .row
    .col-md-4.offset-md-4
      #invalid-token.alert.alert-danger(style='display:none')
        | Missing or invalid API token
      .login-panel.card
        .card-header
          h3.card-title Admin Dashboard Login
        .card-body
          form#login-form(role='form', autocomplete='off')
            fieldset
              .form-group
                input#login-password.form-control(placeholder='API Token', name='token', type='password', value='')
              input#jido-button-login.btn.btn-lg.btn-primary.btn-block(type='submit', value='Login', onclick='return event.preventDefault();')
              .checkbox
                label.control-label(for='login-remember')
                  input#login-remember.form-group(type='checkbox')
                  |  Stay logged-in for 30 days
      a#new-token.float-right(href='#')
        i.fa.icon-user-plus
        |  API Token Setup
// /#login container
