// #monitor container
#jido-page-monitor.container-fluid.jido-page-content(style='display:none')
  .row
    .col-lg-10.col-md-10.col-sm-12.offset-lg-1.offset-md-1
      .page-header
        h1(style='display:inline;') Monitor system health
        .float-right(style='display:inline;')
          ul.pagination.pagination-md#jido-monitor-duration
            li.page-item.jido-duration-1h.active
              a.page-link(href="#", duration='1h') 1 hour
            li.page-item.jido-duration-1d
              a.page-link(href="#", duration='1d') 1 day
            li.page-item.jido-duration-1w
              a.page-link(href="#", duration='1w') 1 week
            li.page-item.jido-duration-1m
              a.page-link(href="#", duration='1m') 1 month
            li.page-item.jido-duration-1y
              a.page-link(href="#", duration='1y') 1 year
          p.text-right
            span.jido-monitor-msg Loading graphs, please wait...
            span &nbsp;
        br
        br

  .row
    .col-lg-5.col-md-5.col-sm-12.offset-lg-1.offset-md-1
      .card.jido-panel
        .card-header
          h3.card-title
            |  CPU load
        .card-body.jido-monitor
          canvas#svgload

    .col-lg-5.col-md-5.col-sm-12
      .card.jido-panel
        .card-header
          h3.card-title
            |  Memory usage
        .card-body.jido-monitor
          canvas#svgmemory

  .row
    .col-lg-5.col-md-5.col-sm-12.offset-lg-1.offset-md-1
      .card.jido-panel
        .card-header
          h3.card-title
            |  Network traffic
        .card-body.jido-monitor
          canvas#svgnetwork

    .col-lg-5.col-md-5.col-sm-12
      .card.jido-panel
        .card-header
          h3.card-title
            |  Disk usage
        .card-body.jido-monitor
          canvas#svgdisk

// /#monitor container
